//------------// Introduction to Programming Using Java: An Object-Oriented Approach//	Arnow/Weiss//------------// the power method// Chapter 11, Section 11.2, Page 464// MODIFICATIONS://    power is made static here so we can test it without creating an objectclass Test_power {	///////////////////////////////////////////////////////	static int power(int x, int y) {    // y>=0, returns x**y		int    assistantResult;		if  (y==0)			return 1;		else {			assistantResult = power(x,y-1);			return x*assistantResult;		}	}	///////////////////////////////////////////////////////	private static boolean powerFailure(int x, int y, int v) {		int	w = power(x,y);		if (w!=v) {			System.err.println("FAILS: power("  +  x  +  ","  +  y  +				 ") returns "  +  w  +  " instead of "  +  v);			return true;		} else			return false;	}	public static void main(String[] a) {		boolean failure=false;		failure |= powerFailure(2,3,8);		failure |= powerFailure(3,2,9);		failure |= powerFailure(5,3,125);		failure |= powerFailure(1,0,1);		failure |= powerFailure(1,1,1);		failure |= powerFailure(1,2,1);		failure |= powerFailure(1,3,1);		failure |= powerFailure(1,999,1);		failure |= powerFailure(0,1,0);		failure |= powerFailure(0,2,0);		failure |= powerFailure(0,3,0);		failure |= powerFailure(0,999,0);		if (!failure)			System.out.println("power passes our tests");	}}